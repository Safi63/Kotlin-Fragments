<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/ratingHeaderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Rating My Work"
        android:textSize="26sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="40sp"
        />

    <RadioGroup
        android:id="@+id/ratingRadioGroup"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp"
        app:layout_constraintTop_toBottomOf="@+id/ratingHeaderTextView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <RadioButton
            android:id="@+id/excellentButton"
            android:layout_width="wrap_content"
            android:text="Excellent"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/veryGoodButton"
            android:layout_width="wrap_content"
            android:text="Very Good"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/goodButton"
            android:layout_width="wrap_content"
            android:text="Good"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/satisfactoryButton"
            android:layout_width="wrap_content"
            android:text="Satisfactory"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/poorButton"
            android:layout_width="wrap_content"
            android:text="Poor"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_height="wrap_content"/>

    </RadioGroup>

    <Button
        android:id="@+id/cancelButton"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:text="Cancel"
        android:backgroundTint="#EC407A"
        android:textColor="#ffff"
        app:layout_constraintTop_toBottomOf="@+id/ratingRadioGroup"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:text="Submit"
        android:layout_marginRight="25dp"
        android:backgroundTint="#26c6da"
        android:textColor="#ffff"
        app:layout_constraintTop_toBottomOf="@+id/ratingRadioGroup"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>